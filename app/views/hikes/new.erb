

      <% if flash.has?(:message) %>
      <h3><%= flash[:message] %></h3>
      <%end%>

      <h1>Share a hike:</h1>
      <form action="/hikes/new" method="POST">
        <label>Name:</label>
        <input type="text" name="hike[name]" id="name"></br>

        <label>Location:</label>
        <input type="text" name="hike[location]"></br>

        <label>Description:</label>
        <input type="text" name="hike[description]"></br>

        <%Difficulty.all.each do |difficulty_ranking|%>
        <input type="checkbox" name="hike[difficulty_id]" value="<%=difficulty_ranking.id%>"><%=difficulty_ranking.rank%>
        <%end%>

        <input type="submit">
        <br></br>

      </form>
    
